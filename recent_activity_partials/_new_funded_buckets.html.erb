<li id="new-funded-buckets">
  <% if buckets.length > 1 %>
    <p><b><%= buckets.length %> Buckets</b> were <b>fully funded</b>:</p>
  <% else %>
    <p><b>1 Bucket</b> was <b>fully funded</b>:</p>
  <% end %>

  <ul style="list-style: none">
    <% buckets.each do |bucket| %>
      <li style="margin-bottom: 10px">
        <a href="<%= "#{root_url}#/buckets/#{bucket.id}" %>"><b><%= bucket.name %> (<%= bucket.formatted_target %>)</b></a><br>
        By <%= bucket.author_name %><br>
        <%= bucket.num_of_contributors %> funders
      </li>
    <% end %>
  </ul>
</li>
